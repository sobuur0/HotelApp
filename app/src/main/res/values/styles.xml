<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="AllTextInputs" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxCornerRadiusBottomEnd">26dp</item>
        <item name="boxCornerRadiusBottomStart">26dp</item>
        <item name="boxCornerRadiusTopStart">26dp</item>
        <item name="boxCornerRadiusTopEnd">26dp</item>
    </style>

    <style name="AllButtons" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="boxBackgroundColor">@color/colorBlue</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
    </style>

</resources>
